{
  "name": "DestinyCTRL",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Asset and logitics manager for Bungie's Destiny",
  "homepage_url": "http://www.bungie.net/",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "assets/icons/icon19.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "cookies",
    "tabs",
    "*://*.bungie.net/*"
  ]
}
