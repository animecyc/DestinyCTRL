{
  "name": "DestinyCTRL",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Asset and logitics manager for Bungie's Destiny",
  "homepage_url": "http://www.bungie.net/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "background": {
    "persistant": "false",
    "scripts": ["background.js"]
  },
  "permissions": [
    "cookies",
    "tabs",
    "*://*.bungie.net/*"
  ]
}
